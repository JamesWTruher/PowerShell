{
    "name": "powershell",
    "version": "1.0.0-*",
    "description": ".NET CLI PowerShell app",

    "buildOptions": {
        "warningsAsErrors": true,
        "allowUnsafe": true,
        "emitEntryPoint": true,
        "copyToOutput": {
            "include": [
                "Modules",
                "../Modules",
                "*.so",
                "*.dylib",
                "../../powershell.version"
            ]
        }
    },

    "publishOptions": {
        "include": [
            "Modules",
            "../Modules",
            "*.so",
            "*.dylib",
            "../../powershell.version"
        ],
        "exclude": [
            "../Modules/Pester/.git"
        ]
    },

    "dependencies": {
        "Microsoft.PowerShell.ConsoleHost": "1.0.0-*"
    },

    "frameworks": {
        "netcoreapp1.0": {
            "imports": [ "dnxcore50", "portable-net45+win8" ],
            "buildOptions": {
                "define": [ "CORECLR" ]
            },
            "dependencies": {
                "Microsoft.NETCore.App": "1.0.0-rc2-3002526"
            }
        }
    },

    "runtimes": {
        "ubuntu.14.04-x64": { },
        "debian.8-x64": { },
        "centos.7-x64": { },
        "win7-x64": { },
        "win81-x64": { },
        "win10-x64": { },
        "osx.10.11-x64": { }
    }
}
