{
    "name": "PSxUnitRunner",
    "description": "A standalone xUnit test runner for OPS",
    "authors": [ "jimtru" ],
    "version": "1.0.0-*",

    "dependencies":{
        "xunit": "2.1.0"
    },

    "buildOptions": {
        "warningsAsErrors": false,
        "allowUnsafe": true,
        "emitEntryPoint": true,
        "copyToOutput": {
            "include": [
                "*.so",
                "*.dylib",
            ]
        }
    },

    "publishOptions": {
        "include": [
            "*.so",
            "*.dylib",
        ]
    },

    "frameworks": {
        "netstandard1.5": {
            "imports": [ "dnxcore50", "portable-net45+win8" ],
            "buildOptions": {
                "define": [ "CORECLR" ]
            },
            "dependencies": {
                "Microsoft.NETCore.App": "1.0.0-rc2-3002668",
                "System.Collections.NonGeneric": "4.0.0-beta-*",
                "System.Collections.Specialized": "4.0.1-rc2-24103",
                "Xunit.Runner.Utility": "*"

            }
        },
    },

    "runtimes": {
        "ubuntu.14.04-x64": { }
    }
}
